{
  "name": "memento-protocol",
  "version": "0.1.0",
  "description": "A lightweight meta-framework for Claude Code",
  "main": "dist/index.js",
  "bin": {
    "memento": "./dist/cli.js"
  },
  "scripts": {
    "build": "tsc && node scripts/build.js",
    "watch": "tsc --watch",
    "dev": "tsx src/cli.ts",
    "test": "jest",
    "test:coverage": "jest --coverage",
    "clean": "rm -rf dist",
    "prepublishOnly": "npm run test && npm run build",
    "postinstall": "echo 'Thank you for installing Memento Protocol! Run \"memento --help\" to get started.'"
  },
  "keywords": [
    "claude",
    "ai",
    "cli",
    "meta-framework",
    "developer-tools",
    "productivity"
  ],
  "author": "Memento Protocol Contributors",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/memento-protocol/memento-protocol.git"
  },
  "bugs": {
    "url": "https://github.com/memento-protocol/memento-protocol/issues"
  },
  "homepage": "https://github.com/memento-protocol/memento-protocol#readme",
  "files": [
    "dist/",
    "templates/",
    "README.md",
    "LICENSE",
    "CHANGELOG.md"
  ],
  "dependencies": {
    "commander": "^12.0.0",
    "inquirer": "^9.2.15"
  },
  "devDependencies": {
    "@types/inquirer": "^9.0.7",
    "@types/jest": "^29.5.11",
    "@types/node": "^20.10.6",
    "esbuild": "^0.19.11",
    "jest": "^29.7.0",
    "ts-jest": "^29.1.1",
    "tsx": "^4.7.0",
    "typescript": "^5.3.3"
  },
  "engines": {
    "node": ">=16.0.0"
  },
  "packageManager": "yarn@1.22.22+sha1.ac34549e6aa8e7ead463a7407e1c7390f61a6610"
}
