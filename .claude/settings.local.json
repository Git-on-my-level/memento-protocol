{
  "permissions": {
    "allow": [
      "Bash(../dist/cli.js)",
      "Bash(../src/cli.ts)",
      "Bash(cat:*)",
      "Bash(chmod:*)",
      "Bash(find:*)",
      "Bash(git add:*)",
      "Bash(git commit:*)",
      "Bash(git describe:*)",
      "Bash(git push:*)",
      "Bash(git tag:*)",
      "Bash(gtimeout 15 npm run dev init -- --force --quick)",
      "Bash(head:CLAUDE.md:*)",
      "Bash(ls:*)",
      "Bash(ls:.memento/modes/:*)",
      "Bash(ls:.memento/workflows/:*)",
      "Bash(mkdir:*)",
      "Bash(mv:*)",
      "Bash(node:*)",
      "Bash(npm init:*)",
      "Bash(npm publish:*)",
      "Bash(npm run build:*)",
      "Bash(npm run dev init:*)",
      "Bash(npm run dev:*)",
      "Bash(npm run:*)",
      "Bash(npm test:*)",
      "Bash(npx memento-protocol ticket list):*",
      "Bash(npx memento-protocol ticket:*)",
      "Bash(npx tsx:*)",
      "Bash(rm:*)",
      "Bash(scripts/npm/commit-tag-and-publish.sh:*)",
      "Bash(sh:.memento/scripts/mode-switch.sh:*)",
      "Bash(sh:.memento/scripts/ticket-context.sh:*)",
      "Bash(timeout 15 npm run dev init -- --force --quick)",
      "WebFetch(domain:docs.anthropic.com)"
    ],
    "deny": []
  },
  "hooks": {
    "PreToolUse": [
      {
        "matcher": "Bash",
        "hooks": [
          {
            "type": "command",
            "command": "./.memento/hooks/scripts/security-guard.sh",
            "timeout": 30
          }
        ]
      }
    ],
    "UserPromptSubmit": [
      {
        "matcher": "*",
        "hooks": [
          {
            "type": "command",
            "command": "./.memento/hooks/scripts/acronym-expander.sh",
            "timeout": 30
          }
        ]
      },
      {
        "matcher": "*",
        "hooks": [
          {
            "type": "command",
            "command": "./.memento/hooks/scripts/memento-routing.sh",
            "timeout": 30
          }
        ]
      },
      {
        "matcher": "*",
        "hooks": [
          {
            "type": "command",
            "command": "echo '## Git Status' && git status -s 2>/dev/null | head -10 || echo 'Not a git repository'",
            "timeout": 30
          }
        ]
      }
    ],
    "SessionStart": [
      {
        "matcher": "*",
        "hooks": [
          {
            "type": "command",
            "command": "echo '## Project Context' && echo && echo '### Git Status' && git status -s 2>/dev/null || echo 'Not a git repository' && echo && echo '### Recent Commits' && git log --oneline -5 2>/dev/null || true && echo && echo '### Project Structure' && find . -type f -name '*.json' -o -name '*.js' -o -name '*.ts' -o -name '*.py' -o -name '*.java' -o -name '*.go' | grep -E -v '(node_modules|.git|dist|build|target)' | head -20 || true",
            "timeout": 60
          }
        ]
      },
      {
        "matcher": "*",
        "hooks": [
          {
            "type": "command",
            "command": "echo '## Project Overview' && echo && echo '### Tickets Status' && echo && echo '#### In Progress' && (find .memento/tickets/in-progress -name '*.md' 2>/dev/null | while read f; do echo \"- $(basename \"$f\" .md)\"; done || echo 'No tickets in progress') && echo && echo '#### Next' && echo \"$(find .memento/tickets/next -name '*.md' 2>/dev/null | wc -l | tr -d ' ') tickets\" && echo && echo '#### Done' && echo \"$(find .memento/tickets/done -name '*.md' 2>/dev/null | wc -l | tr -d ' ') tickets\"",
            "timeout": 30
          }
        ]
      }
    ]
  },
  "$schema": "https://json.schemastore.org/claude-code-settings.json"
}