{
  "version": "1.0.0",
  "hooks": [
    {
      "id": "security-guard-1753975309142",
      "name": "Security Guard",
      "description": "Blocks sudo and super-user commands",
      "event": "UserPromptSubmit",
      "enabled": true,
      "matcher": {
        "type": "regex",
        "pattern": "\\b(sudo|su|doas)\\b"
      },
      "command": "echo 'BLOCKED: Super-user commands are not allowed for safety.' >&2 && exit 2",
      "priority": 200,
      "requirements": {
        "commands": [
          "echo"
        ],
        "env": [],
        "files": []
      }
    }
  ]
}