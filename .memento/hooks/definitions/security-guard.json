{
  "version": "1.0.0",
  "hooks": [
    {
      "id": "security-guard",
      "name": "Security Guard",
      "description": "Blocks sudo and super-user commands",
      "event": "PreToolUse",
      "enabled": true,
      "matcher": {
        "type": "tool",
        "pattern": "Bash"
      },
      "command": "/Users/dazheng/workspace/personal/memento-protocol/.memento/hooks/scripts/security-guard.sh",
      "priority": 200,
      "requirements": {
        "commands": [
          "cat",
          "jq",
          "echo",
          "grep"
        ],
        "env": [],
        "files": []
      }
    }
  ]
}