{
  "id": "code-formatter",
  "name": "Code Formatter",
  "description": "Automatically formats code after file modifications",
  "event": "PostToolUse",
  "enabled": true,
  "matcher": {
    "type": "tool",
    "pattern": "Write,Edit,MultiEdit"
  },
  "command": "prettier --write ${HOOK_TOOL_ARG_FILE_PATH} 2>/dev/null || true",
  "continueOnError": true,
  "priority": 50
}