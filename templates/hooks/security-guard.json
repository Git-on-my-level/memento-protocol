{
  "id": "security-guard",
  "name": "Security Guard",
  "description": "Blocks sudo and super-user commands",
  "event": "PreToolUse",
  "enabled": true,
  "matcher": {
    "type": "tool",
    "pattern": "Bash"
  },
  "command": "${HOOK_SCRIPT}",
  "priority": 200,
  "requirements": {
    "commands": ["cat", "jq", "echo", "grep"],
    "env": [],
    "files": []
  }
}